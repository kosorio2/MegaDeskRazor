@page "{searchString?}"
@model MegaDeskRazor.Pages.DeskQuotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].QuotePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Desk.SurfaceMaterial.DesktopMaterialName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].DeliveryType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DeskQuote)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuoteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desk.SurfaceMaterial.DesktopMaterialName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryType.DeliveryType)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DeskQuoteId" class="index-btn btn btn-primary">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.DeskQuoteId" class="index-btn btn btn-primary">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.DeskQuoteId" class="index-btn btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
